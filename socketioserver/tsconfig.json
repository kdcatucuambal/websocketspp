{
  "compilerOptions": {
    "target": "es6",                                     
    "module": "commonjs",
    "moduleResolution": "node",   
    "outDir": "./dist",                            
    "strict": true,
    "esModuleInterop": true, 
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,                                                         
    "skipLibCheck": true,
    "sourceMap": true                              
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
